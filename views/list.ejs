<%- include('./partials/head.ejs') %>

<section class="enqueteSectie">
<h1>Enquete</h1>
<h2><%= course %></h2>

<main>
  <form action="/<%= id %>/enq-redirect/<%= course %>" method="post">
      <fieldset>
          <legend>Docenten <%= course %></legend>
          <% data.lecturer.forEach(lecturer => { %>
            <label for="<%= lecturer %>" class="docenten">
          <input type="radio" id="<%= lecturer %>" name="lecturer" value="<%= lecturer %>" name="lecturer" required>
          <%= lecturer %></label>
          <% }); %>
      </fieldset>

      <fieldset>
          <legend>In welke week werd <%= course %> beoordeeld?</legend>
          <label for="1-4" class="weken">
            <input type="radio" id="1-4"  name="grade" required>
             Week 1 t/m 4</label>

             <label for="4 - 8" class="weken">
                <input type="radio" id="4 - 8"  name="grade" required>
                 Week 4 t/m 8  </label>

                 
                 <label for="8-12" class="weken">
                    <input type="radio" id="8-12"  name="grade" required>
                     Week 8 t/m 12 </label>

                     
                     <label for="12-20" class="weken">
                        <input type="radio" id="12-20"  name="grade" required>
                         Week 12 t/m 20 </label>

                         

  
      </fieldset>

      <fieldset>
          <legend>Geef <%= course %> een cijfer</legend>
          <label class="grade">Mijn cijfer:</label>

          <label for="1" class="cijfer">
          <input type="radio" id="1"  name="grade" required>
           1 </label>

           <label for="2" class="cijfer">
          <input type="radio" id="2"  name="grade">
          2 </label>

          <label for="3" class="cijfer">
          <input type="radio" id="3"  name="grade">
          3 </label>

          <label for="4" class="cijfer"> 
          <input type="radio" id="4" name="grade">
         4 </label>

         <label for="5" class="cijfer"> 
          <input type="radio" id="5"  name="grade">
          5 </label>

          <label for="6" class="cijfer"> 
          <input type="radio" id="6" name="grade">
         6 </label>

         <label for="7" class="cijfer">
          <input type="radio" id="7" name="grade">
         7 </label>

         <label for="8" class="cijfer">
          <input type="radio" id="8"  name="grade">
          8 </label>

          <label for="9" class="cijfer">
          <input type="radio" id="9" name="grade">
          9 </label>

          <label for="10" class="cijfer">
          <input type="radio" id="10" name="grade">
          10 </label>

      </fieldset>

      <fieldset>
          <legend>Hoe was de lesstof?</legend>
          <input type="radio" id="material_good" name="material" value="good" required>
          <label for="material_good">Boven verwachtingen</label>
          <input type="radio" id="material_medium" name="material" value="medium">
          <label for="material_medium">Zoals verwacht</label>
          <input type="radio" id="material_bad" name="material" value="bad">
          <label for="material_bad">Slechter als verwacht</label>
      </fieldset>

      <fieldset>
          <legend>Werd alles goed uitgelegd?</legend>
          <input type="radio" id="content_good" name="content" value="good" required>
          <label for="content_good">Alles werdt tot in hoog detail uitgelegd</label>
          <input type="radio" id="content_medium" name="content" value="medium">
          <label for="content_medium">Alles werd uitgelegd tot op redelijk niveau</label>
          <input type="radio" id="content_bad" name="content" value="bad">
          <label for="content_bad">Uitleg ging niet diep de stof in</label>
      </fieldset>

      <fieldset>
          <legend>Ik heb van dit vak veel geleerd</legend>

          <label for="learning_good" class="docenten">
          <input type="radio" id="learning_good" name="learning" value="good" required>
       Ja</label>

       <label for="learning_bad" class="docenten">
          <input type="radio" id="learning_bad" name="learning" value="bad">
         Nee</label>
      </fieldset>

      <fieldset>
          <legend>Opmerkingen</legend>
          <label for="comments"></label>
          <textarea name="comments" id="comments" cols="50" rows="5"></textarea>
      </fieldset>

      <input type="submit"></input>

  </form>
</main>
</section>

<%- include('./partials/footer.ejs') %>